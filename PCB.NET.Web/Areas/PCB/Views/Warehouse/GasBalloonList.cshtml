@model PCB.NET.Web.Areas.PCB.Models.WarehouseViewModel.GasBalloonListViewModel

@{
    ViewBag.Title = "Балоны с азотом";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>Балоны с азотом</h2>

<p>
    <a href="@Url.Action("Create_Balloon")" class="btn btn-primary">Добавить новый</a>
</p>
<table class="table">
    <tr>
        <th>
            BalloonNumber
        </th>
        <th>
            DateNextModified
        </th>
        <th>
            LastUpdate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GasBalloon)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BalloonNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNextModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                <a href="@Url.Action("Edit_Balloon", new { id = item.GasBalloonId })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_Balloon", new { id = item.GasBalloonId })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_Balloon", new { id = item.GasBalloonId })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("GasBalloonList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("GasBalloonList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("GasBalloonList", new { Page = x }))</li>
</ul>