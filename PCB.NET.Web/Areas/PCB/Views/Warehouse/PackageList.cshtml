@model PCB.NET.Web.Areas.PCB.Models.WarehouseViewModel.PackageListViewModel

@{
    ViewBag.Title = "Размеры элементов";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <p><a class="btn btn-default" href="@Url.Action("Index","Warehouse", new { area = "PCB"})">&laquo; Назад</a></p>
    <hr />
    <p>
        <a href="@Url.Action("Create_Package")" class="btn btn-primary">Добавить </a>
    </p>
</div>

<table class="table">
    <tr>
        <th>
            Packs
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Package)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Packs)
            </td>
            <td>
                <a href="@Url.Action("Edit_Package", new { id = item.PackagesId })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_Package", new { id = item.PackagesId })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_Package", new { id = item.PackagesId })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("PackageList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("PackageList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("PackageList", new { Page = x }))</li>
</ul>