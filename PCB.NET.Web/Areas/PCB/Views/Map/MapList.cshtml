@model PCB.NET.Web.Areas.PCB.Models.MapViewModel.MapListViewModel

@{
    ViewBag.Title = "План";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create_Map")" class="btn btn-primary">Добавить новый</a>
</p>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Modified
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Map)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                <a href="@Url.Action("Edit_Map", new { id = item.MapId })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_Map", new { id = item.MapId })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_Map", new { id = item.MapId })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("MapList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("MapList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("MapList", new { Page = x }))</li>
</ul>