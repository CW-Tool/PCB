@model PCB.NET.Web.Areas.PCB.Models.MachineViewModel.DvcListViewModel

@{
    ViewBag.Title = "Машина DVC";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <p><a class="btn btn-default" href="@Url.Action("Index","Machine", new { area = "PCB"})">&laquo; Назад</a></p>
    <hr />
    <p>
        <a href="@Url.Action("Create_Dvc")" class="btn btn-primary">Добавить </a>
    </p>
</div>

<table class="table">
    <tr>
        <th>
            NameBlock
        </th>
        <th>
            TimeSecond
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Dvc)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Board.NameBlock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSecond)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@Url.Action("Edit_Dvc", new { id = item.Id })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_Dvc", new { id = item.Id })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_Dvc", new { id = item.Id })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("DvcList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("DvcList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("DvcList", new { Page = x }))</li>
</ul>