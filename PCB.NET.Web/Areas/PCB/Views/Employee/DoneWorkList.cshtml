@model PCB.NET.Web.Areas.PCB.Models.EmployeeViewModel.DoneWorkListViewModel

@{
    ViewBag.Title = "Выполненная работа рабочих";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create_DoneWork")" class="btn btn-primary">Добавить новый</a>
</p>
<table class="table">
    <tr>
        <th>
            NameBlock
        </th>
        <th>
            FirstName
        </th>
        <th>
            Count
        </th>
        <th>
            DateTime
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.DoneWork)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Board.NameBlock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@Url.Action("Edit_DoneWork", new { id = item.DoneId })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_DoneWork", new { id = item.DoneId })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_DoneWork", new { id = item.DoneId })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("DoneWorkList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("DoneWorkList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("DoneWorkList", new { Page = x }))</li>
</ul>