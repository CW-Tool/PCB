@model PCB.NET.Web.Areas.PCB.Models.EmployeeViewModel.EmployeeListViewModel

@{
    ViewBag.Title = "Рабочий персонал";
    Layout = "~/Areas/PCB/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <p><a class="btn btn-default" href="@Url.Action("Index","Employee", new { area = "PCB"})">&laquo; Назад</a></p>
    <hr />
    <p>
        <a href="@Url.Action("Create_Employee")" class="btn btn-primary">Добавить </a>
    </p>
</div>

<table class="table">
    <tr>
        <th>
            PositionEmp
        </th>
        <th>
            FirstName
        </th>
        <th>
            MidName
        </th>
        <th>
            LastName
        </th>
        <th>
            DescriptionWorker
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employee)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionEmp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionWorker)
            </td>
            <td>
                <a href="@Url.Action("Edit_Employee", new { id = item.Id })" class="btn btn-warning btn-sm">Изменить</a> |
                <a href="@Url.Action("Details_Employee", new { id = item.Id })" class="btn btn-info btn-sm">Посмотреть детали</a> |
                <a href="@Url.Action("Delete_Employee", new { id = item.Id })" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    <li>@Html.PageLinksLeft(Model.ListView, x => Url.Action("EmployeeList", new { Page = x }))</li>
    <li>@Html.PageLinks(Model.ListView, x => Url.Action("EmployeeList", new { Page = x }))</li>
    <li>@Html.PageLinksRight(Model.ListView, x => Url.Action("EmployeeList", new { Page = x }))</li>
</ul>